mixin tablesRow(item)
	tr
	- for (var x = 0; x < 8; x++)
		td= item


.container.formProduct
	.row
		.col-md-3
			fieldset.form-group
				legend Новое изделие
				label Группа изделия
				select.custom-select(name="groupProduct")
					option(selected) Выберите изделие...
					option(value="1") Раз корпус
					option(value="2") Два корпус
					option(value="3") Три корпус
				label Подгруппа изделия
				select.custom-select(name="groupSubproduct")
					option(selected) Выберите изделие...
					option(value="1") Раз корпус
					option(value="2") Два корпус
					option(value="3") Три корпус
				label Артикул
				input.form-control(type="text" readonly)
				label Код ТНВЭД
				input.form-control(type="number", name="tnvd", value="0" min="0" max="50" step="1")
				label Наименование изделия
				input.form-control(type="text")
				label Обозначение по ТД
				input.form-control(type="text")
				label Наименование по ТД
				input.form-control(type="text")
				label Габариты
				input.form-control(type="text")
				label Масса изделия (кг)
				input.form-control(type="number", name="tnvd", value="0.000" min="0" max="50" step="0.001")
			fieldset.form-group
				legend Изображения изделия
				.custom-file
					input#customFile(type="file", name="").custom-file-input
					label(for="customFile").custom-file-label
				img(src="../img/placeholder_img.png" alt="Выберите изображение" border="2").img-prod
		.col-md-9
			fieldset
				legend Список изделий:
				table.table.table-bordered.table-hover.table-sm.table-responsive
					thead.thead-light
						tr
							th(scope="col") Артикул
							th(scope="col") Артикул (старый)
							th(scope="col") Код ТНВЭД
							th(scope="col") Наименование изделия
							th(scope="col") Обозначение по ТД
							th(scope="col") Наименование по ТД
							th(scope="col") Габариты
							th(scope="col") Масса (кг)
					tbody
						+tablesRow('Данные')
						+tablesRow('Данные')
						+tablesRow('Данные')
						+tablesRow('Данные')