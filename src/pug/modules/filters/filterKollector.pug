section.filter
	.container
		.card.card-body.form-wrepper-grey
			.row.form-group
				label(for="fKollType").col-sm-2.col-form-label Типоразмер:
				.col-sm-2
					select(name="TypeSize").form-control#fKollType
						option(value="1") 2000
						option(value="2") 2500
						option(value="3") 3000

				label(for="fKollCenterDist").col-sm-5.col-form-label Межцентровое расстояние выходных отверстий:
				.col-sm-3
					select(name="CenterDistance").form-control#fKollCenterDist
						option(value="1") 35
						option(value="2") 75
						option(value="3") 100
						option(value="4") 150

			.row.form-group
				label(for="fKollExecution").col-sm-2.col-form-label Исполнение:
				.col-sm-2
					select(name="Execution").form-control#fKollExecution
						option(value="1") Исполнение 1
						option(value="2") Исполнение 2
						option(value="3") Исполнение 3
						option(value="4") Исполнение 4
						option(value="5") Исполнение HW

				label(for="fKollOutletThread").col-sm-5.col-form-label Резьба выводных отверстий:
				.col-sm-3
					select(name="OutletThread").form-control#fKollOutletThread
						option(value="1") 1/2&#8243;
						option(value="2") 3/4&#8243;

			button(type="button").btn.btn-secondary.btn-lg.btn-block Показать
			