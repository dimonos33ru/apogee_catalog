// Форма данных
.container-fluid
	.form-wrepper
		ul(id="formTab" role="tablist").nav.nav-tabs
			li.nav-item
				a(id="formProduct-tab" data-toggle="tab" href="#formProduct" role="tab" aria-controls="formProduct" aria-selected="true").nav-link.active Изделие
			li.nav-item
				a(id="formGroup-tab" data-toggle="tab" href="#formGroup" role="tab" aria-controls="formGroup" aria-selected="false").nav-link Группу

		.tab-content#myTabContent
			div(id="formProduct" role="tabpanel" aria-labelledby="formProduct-tab").tab-pane.fade.show.active
				include ../formData/formProduct
				
			div(id="formGroup" role="tabpanel" aria-labelledby="formGroup-tab").tab-pane.fade
				include ../formData/formGroup